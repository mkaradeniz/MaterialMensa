<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    tools:context=".ui.activities.about.AboutActivity"
    tools:showIn="@layout/activity_about">

    <ImageView
        android:id="@+id/activity_about_logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:contentDescription="@string/app_name"
        android:src="@drawable/emoji_1f622"/>

    <TextView
        android:id="@+id/activity_about_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_about_logo"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textAppearance="?android:textAppearanceLarge"/>

    <TextView
        android:id="@+id/activity_about_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_about_name"
        android:layout_centerHorizontal="true"
        android:text="@string/activity_about_version"
        android:textAppearance="?android:textAppearanceSmall"/>

    <TextView
        android:id="@+id/activity_about_credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_about_version"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:text="@string/activity_about_credits"
        android:textAppearance="?android:textAppearanceSmall"/>

    <RelativeLayout
        android:id="@+id/activity_about_button_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/activity_about_credits"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:gravity="center">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/activity_about_button_git_hub"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="@string/git_hub"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/activity_about_button_two"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@+id/activity_about_button_git_hub"
            android:text="@string/rate"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/activity_about_button_three"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@+id/activity_about_button_two"
            android:text="@string/amazon_wish_list"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/activity_about_attributions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_about_button_bar"
        android:layout_centerHorizontal="true"
        android:text="@string/attributions"
        android:textAppearance="?android:textAppearanceMedium"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_about_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/activity_about_attributions"
        android:layout_marginTop="@dimen/activity_horizontal_margin"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/challenge_start"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/item_restaurant_icon_container"
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:gravity="center">

        <ImageView
            android:id="@+id/item_restaurant_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_android_black_24dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/item_restaurant_icon_container">

        <RelativeLayout
            android:id="@+id/item_restaurant_meal_text_container"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_restaurant_meal_text_primary"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Vegetarische Kartoffelpizza mit Paprika und Tomaten"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/text_secondary"
                />

            <TextView
                android:id="@+id/item_restaurant_meal_text_secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_restaurant_meal_text_primary"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="1,20€ / 2,30€ / 2,80€"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/text_secondary"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
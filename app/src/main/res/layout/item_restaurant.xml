<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/challenge_start"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/item_restaurant_meal_text_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/item_restaurant_meal_text_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="66dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Vegetarische Kartoffelpizza mit Paprika und Tomaten"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/item_restaurant_meal_text_secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_restaurant_meal_text_primary"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="1,20€ / 2,30€ / 2,80€"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/text_secondary" />

        <ImageView
            android:id="@+id/item_restaurant_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_android_black_24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_restaurant_icon_container"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@+id/item_restaurant_meal_text_container"
        android:gravity="center">


    </RelativeLayout>
</RelativeLayout>
